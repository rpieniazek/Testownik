<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow 
      http://www.springframework.org/schema/webflow/spring-webflow-2.4.xsd"
	start-state="quizName">


	<!-- <on-start>
		<evaluate expression="quizController.form()" result="flowScope.quiz" />
	</on-start> -->

	<view-state id="quizName" view="/adding-quiz/quizName" model="quiz">
		<transition on="addQuestion" to="quizQuestion" />
	</view-state>

	<view-state id="quizQuestion" view="/adding-quiz/quizQuestion" model="quiz">
		<transition on="nextQuestion" to="quizQuestion" />
		<transition on="finish" to="finish" />
	</view-state>
	
	<end-state id="finish"/> <!--  Jakies "zapisano do bazy, czy cos -->
	
